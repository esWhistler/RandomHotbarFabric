{
  "schemaVersion": 1,
  "id": "randhotbar",
  "version": "${version}",

  "name": "Hotbar Randomizer",
  "description": "This mod let's you toggle a randomizer that chooses a different hotbar slot after placing a block, great for getting block variety in your builds. You can even set the probability of getting each slot!",
  "authors": [
    "Whistler"
  ],
  "contributors": [
    "Turnel"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/hotbar-randomizer-fabric",
    "sources": "https://github.com/esWhistler/RandomHotbarFabric",
    "issues": "https://github.com/esWhistler/RandomHotbarFabric/issues"
  },

  "license": "MIT License",
  "icon": "assets/randhotbar/icon.png",

  "environment": "client",
  "entrypoints": {
    "main": [
      "com.whistler.randhotbar.RandHotbar"
    ],
    "modmenu": [
      "com.whistler.randhotbar.integration.ModMenuIntegration"
    ]
  },
  "mixins": [
    "randhotbar.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.18.2",
    "java": ">=17",
    "fabric-key-binding-api-v1": "*",
    "cloth-config": ">=6.2.62"
  },
  "recommends": {
    "amecs": ">=1.3.8+mc.1.18.2"
  },
  "suggests": {
    "modmenu": "*"
  }
}
